{
  "manifest_version": 2,
  "name": "ScanFolder Favorites",
  "version": "1.0",
  "description": "Add or remove favorites inside the scanFolder folder.",
  "permissions": ["tabs", "storage","bookmarks","webNavigation"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "ScanFolder Favorites"
  }
}